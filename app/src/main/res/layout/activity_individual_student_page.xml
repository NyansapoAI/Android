<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keyword: "
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/keywordTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mombasa "
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="Mombasa " />
            </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/learningLevelImageView"
            android:layout_height="200dp"
            android:src="@mipmap/letter_level"
            tools:src="@mipmap/letter_level" />

        <LinearLayout
            android:id="@+id/letterLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/letterTxtview"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Letter"
                android:textAppearance="@android:style/TextAppearance.Large"
                tools:text="Letter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/letter_0"
                    android:tag="letter_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:text="kite" />

                <TextView
                    android:id="@+id/letter_1"
                    android:tag="letter_1"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:text="toy" />

                <TextView
                    android:id="@+id/letter_2"
                    android:tag="letter_2"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:text="river" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/letter_3"
                    android:layout_width="0dp"
                    android:tag="letter_3"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:text="kite" />

                <TextView
                    android:id="@+id/letter_4"
                    android:tag="letter_4"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:text="toy" />

                <TextView
                    android:id="@+id/letter_5"
                    android:tag="letter_5"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:text="river" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wordLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="word"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.Large"
                tools:text="Word" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/word_0"
                    android:tag="word_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"
                    android:minWidth="50dp"
                    tools:text="kite" />

                <TextView
                    android:id="@+id/word_1"
                    android:tag="word_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"
                    android:minWidth="50dp"
                    tools:text="toy" />

                <TextView
                    android:id="@+id/word_2"
                    android:tag="word_2"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"
                    android:minWidth="50dp"
                    tools:text="river" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/word_3"
                    android:tag="word_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"
                    tools:text="school" />

                <TextView
                    android:id="@+id/word_4"
                    android:tag="word_4"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_correct_word"
                    android:gravity="center"

                    tools:text="cube" />

                <TextView
                    android:id="@+id/word_5"
                    android:layout_width="0dp"
                    android:background="@drawable/bg_correct_word"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:tag="word_5"
                    android:gravity="center"
                    tools:text="mother" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/paragraphLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Paragraph"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.Large" />

            <TextView
                android:id="@+id/paragraphTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@android:color/black"
                tools:text="One morning, the cow went to the lion. She

" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/storyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Story"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.Large" />

            <TextView
                android:id="@+id/storyTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@android:color/black"
                tools:text="One morning, the cow went to the lion. She" />

            <TextView
                android:id="@+id/q1TxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="what did the forest have?" />

            <TextView
                android:id="@+id/q2TxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="what did the forest have?" />
        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>