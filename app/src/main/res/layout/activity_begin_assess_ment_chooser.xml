<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".presentation.ui.begin_assessment_chooser.BeginAssessMentChooserActivity">

    <TextView
        android:layout_width="match_parent"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Choose A character"
        android:gravity="center"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:background="@drawable/bg_avatar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/nyansapo_avatar_cheeta" />

        <ImageView

            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/nyansapo_avatar_lion" />

    </LinearLayout>



   <LinearLayout
       android:background="@drawable/bg_avatar"

       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/bg_avatar"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/nyansapo_avatar_rhino" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/nyansapo_avatar_waterbuffalo" />

    </LinearLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_avatar"

        android:layout_gravity="center_horizontal"
        android:src="@drawable/nyansapo_avatar_elelphant" />

</LinearLayout>